{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'âœ“ Agent task completed - check output quality'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": "date '+Session ended: %Y-%m-%d %H:%M' >> .claude/marketing/session-log.txt"
      }
    ],
    "TaskCompleted": [
      {
        "type": "command",
        "command": "bash hooks/task-completed.sh \"$TASK_SUBJECT\" \"$TASK_OWNER\""
      }
    ],
    "TeammateIdle": [
      {
        "type": "command",
        "command": "bash hooks/teammate-idle.sh"
      }
    ]
  }
}
